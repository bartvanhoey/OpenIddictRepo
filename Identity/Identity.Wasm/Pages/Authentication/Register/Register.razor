@page "/register"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Forms
@inherits RegisterBase

<PageTitle>Sign up</PageTitle>

<div class="card mt-3 shadow-sm rounded auth-card">
    <div class="px-4 pt-4">
        <h2 class="card-title">Sign up</h2>
        <hr/>
    </div>
    <div class="card-body p-4 h-100">
        <EditForm class="d-flex flex-column h-100" Model="Input" asp-route-returnUrl="@ReturnUrl" method="post" OnValidSubmit="RegisterUserAsync"
                  FormName="register">
            <DataAnnotationsValidator/>
            <div class="form-floating mb-3">
                <InputText id="email" @bind-Value="Input.Email" class="form-control" autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com"/>
                <label for="email">Email</label>
                <ValidationMessage For="() => Input.Email" class="text-danger"/>
            </div>
            <div class="form-floating mb-3 password-reveal">
                <InputText id="password" type="@PasswordType" @bind-Value="Input.Password" class="form-control"
                           autocomplete="new-password"
                           aria-required="true"/>
                <button type="button" class="btn btn-default eye-icon" @onclick="TogglePasswordReveal"><i class="@CssClassPasswordEyeIcon"></i></button>
                <label for="password">Password</label>
                <ValidationMessage For="() => Input.Password" class="text-danger"/>
            </div>
            <div class="form-floating mb-3 password-reveal">
                <InputText id="confirm-password" type="@ConfirmPasswordType" @bind-Value="Input.ConfirmPassword"
                           class="form-control"
                           autocomplete="new-password" aria-required="true"/>
                <button type="button" class="btn btn-default eye-icon"  @onclick="ToggleConfirmPasswordReveal"><i class="@CssClassConfirmPasswordEyeIcon"></i></button>
                <label for="confirm-password">Confirm Password</label>
                <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger"/>
            </div>
            <div class="mt-auto">
                <button type="submit" class="w-100 btn btn-primary btn-lg">Create an account</button>
                <p class="mt-3">
                    Already have an account? <a href="/account/login">Log in here.</a>
                </p>
            </div>
        </EditForm>
    </div>
</div>
@* keep these buttons hidden here, if not bi-eye-icon-slash will not show up because of PurgeCss in gulpfile.js *@
<button hidden="hidden" ><i class="bi-eye-icon"></i></button>
<button hidden="hidden" ><i class="bi-eye-icon-slash"></i></button>


